<div class='row'>
    <div class="form-group col-md-4 col-sm-6">
        <label for="asset">Asset Type</label>
        <select id='asset' class="form-control" onchange="displayOptions(this.value)">
            <option value="" disabled selected style="display:none;"></option>
            {{#each assets}}
                <option value='{{value}}'>{{label}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group col-md-4 col-sm-6">
        <label for="n">Number of simulations</label>
        <input type="text" class="form-control" id="n" placeholder="1000">
    </div>
    <div class="form-group col-md-4 col-sm-6">
        <label for="sigma">Volatility</label>
        <input type="text" class="form-control" id="sigma" placeholder=".04">
    </div>
    <div class="form-group col-md-4 col-sm-6">
        <label for="a">Mean Reversion</label>
        <input type="text" class="form-control" id="a" placeholder=".2">
    </div>
    <div class="form-group col-md-4 col-sm-6">
        <label for="t">Simulate to date (in days)</label>
        <input type="text" class="form-control" id="t" placeholder="10">
    </div>
</div>